<%= form_with(model: manager) do |form| %>
  <% if manager.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(manager.errors.count, "error") %> prohibited this manager from being saved:</h2>

      <ul>
        <% manager.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :manager_id, style: "display: block" %>
    <%= form.select :manager_id, @people.map{ |p| ["#{p.surname}, #{p.forenames}", p.id] }, {include_blank: true}, {required: true} %>
  </div>

  <div>
    <%= form.label :managed_id, style: "display: block" %>
    <%= form.select :managed_id, @people.map{ |p| ["#{p.surname}, #{p.forenames}", p.id] }, {include_blank: true}, {required: true} %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
